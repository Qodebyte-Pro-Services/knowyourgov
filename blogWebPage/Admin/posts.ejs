            border: none;
            color: #777;
            cursor: pointer;
            margin-right: 0.5rem;
            font-size: 1rem;
            transition: var(--transition);
        }

        .action-btn:hover {
            color: var(--primary-color);
        }

        .action-btn.delete:hover {
            color: var(--danger-color);
        }

        /* Modal Styles */
        .modal {
