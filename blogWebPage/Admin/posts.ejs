   <script>
    $(document).ready(function() {
    let currentPage = 1;
    const pageSize = 10;

    function fetchPosts(page = 1) {
        fetch(`/posts?page=${page}&limit=${pageSize}`)
            .then(res => res.json())
            .then(async data => {
                const posts = data.posts;
                const totalPages = data.totalPages;
                const $table = $('#post-table');
                $table.empty();

                for (const post of posts) {
                    const detailsRes = await fetch(`/post/${post.id}/details`);
                    const postDetails = await detailsRes.json();

                    const categories = postDetails.categories ? postDetails.categories.join(', ') : '';
                    const tags = postDetails.tags ? postDetails.tags.join(', ') : '';
                    const author = postDetails.author_name || post.author_id;

                    $table.append(`
                        <tr data-id="${post.id}">
                            <td>${post.title}</td>
                            <td>${post.views || 0}</td>
                            <td>${author}</td>
                            <td>${categories}</td>
                            <td>${tags}</td>
                            <td>
                                <span class="status-badge status-${post.status}">
                                    ${post.status.charAt(0).toUpperCase() + post.status.slice(1)}
                                </span>
                            </td>
                            <td>${new Date(post.created_at).toISOString().slice(0, 10)}</td>
                            <td>
                                <a href="/blog-details?id=${post.id}" class="action-btn" title="View"><i class="fas fa-eye"></i></a>
                                <a href="/Admin/post-detail?id=${post.id}" class="action-btn" title="Edit"><i class="fas fa-edit"></i></a>
                                <button class="action-btn delete" data-id="${post.id}" title="Delete"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    `);
                }

                $('#post-table').on('click', 'tr', function(e) {
   
    if ($(e.target).closest('.action-btn').length === 0) {
        const postId = $(this).data('id');
        if (postId) {
            window.location.href = `/Admin/post-detail?id=${postId}`;
        }
    }
});
               
                let paginationHtml = '';
                for (let i = 1; i <= totalPages; i++) {
                    paginationHtml += `<button class="page-btn" data-page="${i}">${i}</button>`;
                }
                $('#pagination').html(paginationHtml);
            });
    }

    fetchPosts();

    // Pagination click
    $(document).on('click', '.page-btn', function() {
        currentPage = $(this).data('page');
        fetchPosts(currentPage);
    });

    // Handle delete
    $('#post-table').on('click', '.delete', function() {
        const postId = $(this).data('id');
        fetch(`/post/${postId}`, { method: 'DELETE' })
            .then(res => res.json())
            .then(data => {
                showToast(data.message);
                fetchPosts(currentPage);
            });
    });
});
