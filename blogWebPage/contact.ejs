<script>
window.addEventListener('DOMContentLoaded', () => {
    const supportData = JSON.parse(localStorage.getItem('supportData') || '{}');
    const nameInput = document.querySelector('input[name="name"]');
    const emailInput = document.querySelector('input[name="email"]');
    if (supportData.name && supportData.email) {
        nameInput.value = supportData.name;
        emailInput.value = supportData.email;
        nameInput.parentElement.style.display = 'none';
        emailInput.parentElement.style.display = 'none';
    }
});

document.getElementById('dreamit-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    const btn = this.querySelector('button[type="submit"]');
    btn.disabled = true;
    const originalText = btn.textContent;
    btn.textContent = 'Sending...';

    let nameInput = this.querySelector('input[name="name"]');
    let emailInput = this.querySelector('input[name="email"]');
    let name, email;

  
    if (nameInput.parentElement.style.display === 'none' && emailInput.parentElement.style.display === 'none') {
        const supportData = JSON.parse(localStorage.getItem('supportData') || '{}');
        name = supportData.name;
        email = supportData.email;
    } else {
        name = nameInput.value.trim();
        email = emailInput.value.trim();
    }
    const message = this.querySelector('textarea[name="message"]').value.trim();

    if (!name || !email || !message) {
        showToast('Please fill all required fields.', 'danger');
        btn.disabled = false;
        btn.textContent = originalText;
        return;
    }

   
    if (!localStorage.getItem('supportData')) {
        localStorage.setItem('supportData', JSON.stringify({ name, email }));
        nameInput.parentElement.style.display = 'none';
        emailInput.parentElement.style.display = 'none';
    }

    try {
        const res = await fetch('/support', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name, email, message })
        });
        if (res.ok) {
            showToast('Message sent!', 'success');
            this.reset();
        } else {
            const data = await res.json();
            showToast(data.message || 'Error sending message.', 'danger');
        }
    } catch {
        showToast('Network error.', 'danger');
    }
    btn.disabled = false;
    btn.textContent = originalText;
});
</script>
