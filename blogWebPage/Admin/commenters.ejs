<script>
let currentPage = 1;
const perPage = 10;
let totalPages = 1;

// Fetch and render commenters
function loadCommenters(page = 1) {
    fetch(`/commenters?page=${page}&limit=${perPage}`)
        .then(res => res.json())
        .then(data => {
            renderTable(data.commenters);
            renderPagination(data.page, Math.ceil(data.total / data.limit));
        });
}

function renderTable(commenters) {
    const tbody = document.querySelector('.table tbody');
    tbody.innerHTML = '';
    commenters.forEach(c => {
        tbody.innerHTML += `
            <tr>
                <td>${c.name}</td>
                <td>${c.email}</td>
                <td>${c.total_comments}</td>
                <td>${c.first_comment_date ? c.first_comment_date.slice(0,10) : '-'}</td>
                <td>${c.last_comment_date ? c.last_comment_date.slice(0,10) : '-'}</td>
                <td>
                    <button class="action-btn view-comments" title="View Comments" data-commenter-id="${c.id}" data-name="${c.name}" data-email="${c.email}">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button class="action-btn delete" title="Delete Commenter" data-commenter-id="${c.id}">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
        `;
    });
    addTableListeners();
}

function renderPagination(page, total) {
    currentPage = page;
    totalPages = total;
    let html = '';
    if (totalPages > 1) {
        html += `<nav class="pagination-nav"><ul class="pagination">`;
        for (let i = 1; i <= totalPages; i++) {
            html += `<li class="page-item${i === page ? ' active' : ''}">
                <a href="#" class="page-link" data-page="${i}">${i}</a>
            </li>`;
        }
        html += `</ul></nav>`;
    }
    let pagDiv = document.getElementById('pagination');
    if (!pagDiv) {
        pagDiv = document.createElement('div');
        pagDiv.id = 'pagination';
        document.querySelector('.commenters-section').appendChild(pagDiv);
    }
    pagDiv.innerHTML = html;
    pagDiv.querySelectorAll('.page-link').forEach(link => {
        link.onclick = function(e) {
            e.preventDefault();
            const page = parseInt(this.dataset.page, 10);
            if (page !== currentPage) loadCommenters(page);
        };
    });
}

function addTableListeners() {
    // View Comments
    document.querySelectorAll('.view-comments').forEach(btn => {
        btn.onclick = function() {
            const commenterId = this.getAttribute('data-commenter-id');
            const name = this.getAttribute('data-name');
            const email = this.getAttribute('data-email');
            document.getElementById('commenterName').textContent = name;
            document.getElementById('commenterEmail').textContent = email;
            // Fetch comments for this commenter
            fetch(`/comments?email=${encodeURIComponent(email)}`)
                .then(res => res.json())
                .then(comments => {
                    const list = document.getElementById('commentsList');
                    list.innerHTML = '';
                    if (!comments.length) {
                        list.innerHTML = '<div class="comment-item">No comments found.</div>';
                    } else {
                        comments.forEach(cm => {
                            list.innerHTML += `
                                <div class="comment-item">
                                    <div class="comment-meta">
                                        <span class="comment-post">On: ${cm.post_title || '-'}</span>
                                        <span class="comment-date">${cm.created_at ? cm.created_at.slice(0,10) : '-'}</span>
                                    </div>
                                    <div class="comment-text">${cm.comment}</div>
                                </div>
                            `;
                        });
                    }
                    document.getElementById('commentsModal').classList.add('active');
                });
        };
    });
    // Delete Commenter
    document.querySelectorAll('.action-btn.delete').forEach(btn => {
        btn.onclick = function() {
            const commenterId = this.getAttribute('data-commenter-id');
            if (confirm('Are you sure you want to delete this commenter and all their comments?')) {
                fetch(`/commenters/${commenterId}`, { method: 'DELETE' })
                    .then(res => res.json())
                    .then(data => {
                        showToast(data.message, 'success');
                        loadCommenters(currentPage);
                        document.getElementById('commentsModal').classList.remove('active');
                    });
            }
        };
    });
}

// Export button
document.querySelector('.btn.btn-primary').onclick = function() {
    window.location.href = '/commenters/export';
};

// Modal close logic
document.querySelector('.modal-close').onclick = function() {
    document.getElementById('commentsModal').classList.remove('active');
};
document.getElementById('commentsModal').onclick = function(e) {
    if (e.target === this) this.classList.remove('active');
};

// Initial load
loadCommenters();
</script>
