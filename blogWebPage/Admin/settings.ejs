        function renderSocialLinks() {
    fetch('/social_links')
        .then(res => res.json())
        .then(links => {
            const tbody = document.querySelector('.settings-table tbody');
            tbody.innerHTML = '';
            links.forEach(link => {
                tbody.innerHTML += `
                    <tr>
                        <td>${link.platform}</td>
                        <td>${link.url}</td>
                        <td>
                            <button class="action-btn edit-social" data-id="${link.id}" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete delete-social" data-id="${link.id}" title="Delete">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
            });
        });
}

